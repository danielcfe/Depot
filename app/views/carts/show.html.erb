<% if notice %>
 	<p id="" class="alert-message success" ><%= notice %></p>
 	<% end %>
 	
 	<h2>Your Cart</h2>
 	<table>
 		<% @cart.line_items.each do |item| %>
		<tr>
			<td><%= item.quantity %></td>
			<td><%= item.product.title %></td>
			<td class="item_price" ><%= number_to_currency(item.total_price) %></td>
			<td><%= link_to 'Delete', item, confirm: 'Are you sure?', method: :delete %></td>
 		</tr>
		<% end %>
		<tr class="total_line" >
			<td></td>
		 	<td>Total</td>
		 	<td class="total_cell"  colspan="2"><%= number_to_currency(@cart.total_price) %></td>
		</tr>
 	</table>
<%= button_to 'Empty cart', @cart,{:method=>'delete',:confirm =>'Are you sure?',:class=>'btn primary'} %>